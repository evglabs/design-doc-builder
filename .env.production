# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Authentication (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=change-this-super-secret-jwt-key-in-production
JWT_EXPIRES_IN=24h

# Database (Docker volume path)
DATABASE_PATH=/app/database/app.db

# File uploads (Docker volume path)
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=5242880
MAX_FILES_PER_DOCUMENT=20

# Admin settings
ADMIN_EMAIL=admin@yourdomain.com
REQUIRE_ADMIN_APPROVAL=false

# Email (optional, configure if needed)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
